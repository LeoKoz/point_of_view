<%= form_for(@theme.statements.build) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit "Submit statement" %>
  </div>
  <%= hidden_field_tag 'theme_id', @theme.id %>
<% end %>